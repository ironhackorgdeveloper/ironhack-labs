<section id="beers">
  {{#each beers}} 
    <div class="beer-box beer-random">
      <figure>
        <img src="{{this.image_url}}" alt="Beer brand image">
      </figure>
      <div class="beer-info">
        <h2>{{this.name}}</h2>
        <span class="tagline">{{this.tagline}}</span>
        <p>{{this.description}}</p>
        <ul>
        {{#each this.food_pairing}}
          <li>{{this}}</li>
        {{/each}}
        </ul>
        <p>{{this.brewers_tips}}</p>
      </div>
    </div>
  {{/each}}
</section>